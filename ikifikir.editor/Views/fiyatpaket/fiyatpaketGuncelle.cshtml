@model ikifikir.editor.Models.PricingDataModel.PricingModel.PricingEditViewModel

@{
    ViewData["Title"] = "kategoriekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-6">
        <div class="card">
            <div class="card-header">
                <p class="card-title">Fiyat Paket Güncelle</p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("fiyatpaketiGuncellestir", "fiyatpaket", FormMethod.Post, new { @enctype="multipart/form-data" }))
                {
                    @Html.HiddenFor(x=> x.Id)
                    <div class="form-group">
                        <div class="card">
                            <div class="card-body">
                                <img id="img" style="width:100%" src="https://uploads.ikifikir.net/images/@Model.Image" />
                                <label style="margin-top:10px;" class="col-sm-12 text-center">*(1920x1080 dosya boyutu)</label>
                                <label for="example-text-input" class="col-sm-12 col-form-label text-center">Öne Çıkan GIF Belirle</label>
                                <input type="file" class="filestyle" id="upload" data-input="false" name="file" data-buttonname="btn-secondary">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Paket Adı</label>
                        <input type="text" class="form-control" placeholder="Paket adı giriniz..." maxlength="325" asp-for="Title" name="Title" id="defaultconfig">
                    </div>
                    <br />
                    <div class="form-group">
                        <label>Aylık Fiyat</label>
                        <input type="text" class="form-control" placeholder="Aylık fiyat giriniz..." maxlength="25" asp-for="MonthPrice" name="MonthPrice" id="defaultconfig">
                    </div>
                    <br />
                    <div class="form-group">
                        <label>Yıllık Fiyat</label>
                        <input type="text" class="form-control" placeholder="Yıllık fiyat giriniz..." maxlength="25" asp-for="YearPrice" name="YearPrice" id="defaultconfig">
                    </div>
                    <br />
                    <div class="form-group mt-3">
                        <button class="btn btn-primary" type="submit">Paket Güncelle</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

