@using ikifikir.editor.Models.RolModel
@model List<RolAssignViewModel>

@{
    ViewData["Title"] = "rolata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="@Url.Action("rolatamasiyap","kullanici",new { id = TempData["userId"] })">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].roleId" />
            <input type="hidden" asp-for="@Model[i].name" />
            <input type="checkbox" asp-for="@Model[i].exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].exists">@Model[i].name</label>
        </div>
    }

    <button class="btn btn-info" style="margin-top:10px;">Değişiklikleri Kaydet</button>
</form>



