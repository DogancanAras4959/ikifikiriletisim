@model ikifikir.editor.Models.RolModel.RolCreateViewModel


@{
    ViewData["Title"] = "roleekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-6">
        <div class="card">
            <div class="card-header">
                <p class="card-title">Rol Ekle</p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("rololustur", "kullanici", FormMethod.Post))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Rol adı giriniz..." maxlength="25" name="roleName" id="defaultconfig">
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-primary" type="submit">Rol Oluştur</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

