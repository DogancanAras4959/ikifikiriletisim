@model ikifikir.editor.Models.CategoryModel.CategoryEditViewModel

@{
    ViewData["Title"] = "kategoriduzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <p class="card-title">
                    Kategori Güncelle
                </p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("kategoriguncelle", "proje", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <input class="form-control" type="text" asp-for="name" placeholder="Kategori Adı giriniz..." id="defaultconfig" maxlength="25" />
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" placeholder="Filterleme tipi giriniz. Örn(.digital)" asp-for="filterType" />
                    </div>
                    <div class="form-group mt-3">
                        <button type.="submit" class="btn btn-primary">Kategori Güncelle</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
