@model ikifikir.editor.Models.CategoryModel.CategoryCreateViewModel

@{
    ViewData["Title"] = "kategoriekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-6">
        <div class="card">
            <div class="card-header">
                <p class="card-title">Kategori Ekle</p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("kategoriolustur", "proje", FormMethod.Post))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Kategori adı giriniz..." maxlength="25" asp-for="name" name="name" id="defaultconfig">
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" placeholder="Filterleme tipi giriniz. Örn(.digital)" asp-for="filterType"/>
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-primary" type="submit">Kategori Oluştur</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

