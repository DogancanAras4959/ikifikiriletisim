@model ikifikir.editor.Models.TeamsModel.TeamsEditViewModel

@{
    ViewData["Title"] = "personelduzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-8" style="display:block; margin:0 auto;">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="card-title text-center">Personel Güncelle</h4>
                        <p class="card-title-desc text-center">Personel güncelleyin ve sayfanızı yönetmeye başlayın</p>
                    </div>
                </div>

                @using (Html.BeginForm("personelguncelle", "takim", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(x=> x.Id)
                    <div class="row justify-content-center mt-2">
                        <div class="col-md-4">
                            <div class="mb-3 text-center">
                                <img class="rounded rounded-circle" width="100" height="100" id="img" src="https://uploads.ikifikir.net/images/@Model.image" />
                            </div>
                            <div class="mb-0 text-center">
                                <label style="margin-bottom:0px;" class="form-label">Personel Fotoğrafı seçin</label>
                                <p><small>(Zorunlu değildir)</small></p>
                            </div>
                            <div class="mb-4">
                                <input type="file" class="filestyle" id="upload" data-input="false" name="file" data-buttonname="btn-secondary">
                            </div>
                        </div>

                    </div>

                    <div class="row g-3 needs-validation mb-2" novalidate>

                        <div class="col-md-6">

                            <label for="example-text-input" class="col-sm-12 col-form-label">Personel İsim Soyisim</label>
                            <input asp-for="name" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="İsim Soyisim Giriniz" id="example-text-input">
                            <span asp-validation-for="name" class="text-danger"></span>

                        </div>

                        <div class="col-md-6">

                            <label for="example-text-input" class="col-sm-12 col-form-label">Departman</label>
                            <input asp-for="role" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Departman giriniz" id="example-text-input">
                            <span asp-validation-for="role" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="row g-3 needs-validation mb-3" novalidate>

                        <div class="col-md-6">
                            <label for="example-text-input" class="col-sm-12 col-form-label">Facebook</label>
                            <input asp-for="facebook" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Facebook hesabınızı giriniz" id="example-text-input">
                            <span asp-validation-for="facebook" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">

                            <label for="example-text-input" class="col-sm-12 col-form-label">Twitter</label>
                            <input asp-for="twitter" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Twitter hesabınızı Giriniz" id="example-text-input">
                            <span asp-validation-for="twitter" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="row g-3 needs-validation mb-3" novalidate>

                        <div class="col-md-6">
                            <label for="example-text-input" class="col-sm-12 col-form-label">İnstagram</label>
                            <input asp-for="instagram" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="İnstagram hesabınızı girin" id="example-text-input">
                            <span asp-validation-for="instagram" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">

                            <label for="example-text-input" class="col-sm-12 col-form-label">Gmail</label>
                            <input asp-for="gmail" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Gmail hesabınızı girin" id="example-text-input">
                            <span asp-validation-for="gmail" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="mb-3">
                        <input type="submit" class="btn btn-primary btn-sm" style="min-width: 215px; font-size: 18px; display: block; margin: 0 auto;" value="PERSONEL OLUŞTUR" />
                    </div>

                }

            </div>
        </div>
    </div>
</div>
<script src="~/libs/jquery/jquery.min.js"></script>

<script>
        $(function () {
            $('#upload').change(function () {
                var input = this;
                var url = $(this).val();
                var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
                if (input.files && input.files[0] && (ext == "gif" || ext == "png" || ext == "jpeg" || ext == "jpg")) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#img').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
                else {
                    $('#img').attr('src', '~/images/users/avatar-6.jpg');
                }
            });
        });
</script>



