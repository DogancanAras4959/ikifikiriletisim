@model IEnumerable<ikifikirweb.ViewModels.TeamModel.TeamListViewModel>
@using ikifikirweb.ViewModels.ReferenceModel
@using ikifikirweb.Models.MetaConfig


@{
    ViewData["Title"] = "ekibimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<ReferenceListViewModel> references = ViewBag.Reference as List<ReferenceListViewModel>;
    MetaViewModel meta = ViewBag.Meta as MetaViewModel;

}

<link href="~/assets/css/mobile.css" rel="stylesheet" />

<style>

    #team-section.team-classic {
        padding: 0px 0 80px 0;
    }

    .member-list.mb-hover-card .member-box .member-image-wrap::before {
        position: absolute;
        display: none;
        content: "";
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #e4e6ec;
        background-color: #8e2492;
        outline: 1px solid transparent;
        z-index: -1;
        opacity: 0;
        -webkit-transition: all 0.2s ease-in-out;
        -moz-transition: all 0.2s ease-in-out;
        -o-transition: all 0.2s ease-in-out;
        -ms-transition: all 0.2s ease-in-out;
        transition: all 0.2s ease-in-out;
    }

    .member-box .member-image-wrap {
        position: relative;
        padding-bottom: 100%;
        z-index: 2;
        -webkit-transition: all 0.2s ease-in-out;
        -moz-transition: all 0.2s ease-in-out;
        -o-transition: all 0.2s ease-in-out;
        -ms-transition: all 0.2s ease-in-out;
        transition: all 0.2s ease-in-out;
    }

    .member-box .member-image {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(91, 107, 140, 0.1);
        z-index: 1;
        border-radius: 130px;
        width: 100%;
        height: 100%;
    }

    body.header-transparent-on #page-header.ph-lg .page-header-inner {
        padding-top: 100px;
        padding-bottom: 5px;
    }

    .simple-text-section {
        position: relative;
        padding: 60px 3%;
    }

    /*    #team-section.team-classic {
        padding: 50px 0 80px 0;
    }*/

    #clients-section {
        position: relative;
        padding: 50px 0 100px 0;
    }

    .page-header-caption.ph-cap-xlg .page-header-title {
        font-size: 30px;
    }

    .tt-heading.tt-heading-xxlg .tt-heading-title {
        font-size: 35px !important;
    }

    .page-header-caption.ph-cap-xlg .page-header-subtitle {
        font-size: 25px;
        font-weight: 500;
    }

    body.tt-boxed .tt-wrap {
        max-width: 1282px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 0px;
        padding-right: 0px;
    }

    .page-header-title {
        max-width: 900px;
        margin: 0 0 0px 0;
        font-size: 52px;
        font-weight: 700;
        color: #181c25;
    }

    body.header-transparent-on #page-header.ph-xlg .page-header-inner {
        padding-top: 110px;
        padding-bottom: 30px;
    }

    .isotope-filter.fi-btn-tansparent-light .isotope-filter-button {
        background-color: transparent;
        padding: 0;
        font-weight: bold;
        font-weight: 600;
        color: #fff;
    }

    .simple-text-section-content {
        position: relative;
        max-width: 100%;
        z-index: 3;
    }

    p {
        margin: 0 0 10px;
        font-weight: 500;
    }
    /*.member-list > li {
        float: left;
        width: 20%;
        position: relative;
        left: 136px;
    }*/

</style>

<section id="page-header" class="ph-xlg">

    <div class="page-header-image parallax-6 bg-image" style="background-image: url('https://uploads.ikifikir.net/images/header-bizkimiz.jpg');">
        <div class="cover cover-opacity-1"></div>
    </div>
    <!-- End page header image -->
    <!-- Begin page header inner -->
    <div class="page-header-inner tt-wrap">

        <div class="page-header-caption ph-cap-xlg ph-cap-light ph-cap-shadow parallax-4 fade-out-scroll-5">
            <div class="ph-title-wrap team-title-prel">
                <h2 class="page-header-title" style="color:#94033f;">Biz Kimiz?</h2>
            </div>
        </div>
        <!-- End page header caption -->

    </div>

    <div class="ph-anim-element-wrap hide-ph-anim parallax-4 fade-out-scroll-4">
        <div class="ph-anim-element-holder">
            <div class="ph-anim-element"></div>
        </div>
    </div>

</section>

<section class="simple-text-section no-padding-bottom">
    <div class="simple-text-inner tt-wrap">
        <div class="simple-text-section-content">
            <div class="row">
                <div class="col-sm-12">

                    <h2 class="text-center">İkifikir buluşmadır.</h2>
                    <p class="text-center" style="font-weight:bold;"><strong><span style="color:#a42463;">Hayalgücü ve Füzyon’un, dinamizm ve tecrübenin, tencereyle kapağın buluşması…</span></strong></p>
                    <p class="text-center">
                        Yıllardan beri kendi alanlarında başarılı işlere imza atan bir grup yaratıcı profesyonel, aynı yolda birlikte yürümeye karar verdi.
                    </p>

                    <div class="team-classic" id="team-section" style="margin-top:70px;">
                        <div class="team-inner tt-wrap">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-3">
                                        <div class="member-box">

                                            <!-- Begin member image -->
                                            <div class="member-image-wrap">
                                                <div class="member-image bg-image lazy" data-src="https://uploads.ikifikir.net/images/@item.image"></div>
                                            </div>
                                            <!-- End member image -->
                                            <!-- Begin member info -->
                                            <div class="member-info">
                                                <div class="level-up" style="text-align:center;">
                                                    <h4 class="member-info-title">@item.name</h4>
                                                    <div class="member-info-text">@item.role</div>
                                                </div> <!-- /.level-up -->
                                                <!--<div class="level-down" style="text-align:center;">
                                    <ul class="member-social">
                                        <li><a href="item.facebook" class="btn btn-social-min btn-default btn-link" title="Follow me on Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="item.twitter" class="btn btn-social-min btn-default btn-link" title="Follow me on Twitter" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="item.instagram" class="btn btn-social-min btn-default btn-link" title="Follow me on Instagram" target="_blank"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="item.gmail" class="btn btn-social-min btn-default btn-link" title="Contact me" target="_blank"><i class="fas fa-envelope"></i></a></li>
                                    </ul>-->
                                                <!-- /.member-social -->
                                                <!--</div>--> <!-- /.level-down -->
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- End simple text section content -->

    </div> <!-- /.cta-inner -->
</section>

<section id="clients-section" class="clients-style-2">
    <div class="clients-inner tt-wrap max-width-1200">
        <div class="row">
            <div class="col-md-12">

                <div class="tt-heading tt-heading-xxlg text-center no-padding-right">
                    <div class="tt-heading-inner">
                        <h1 class="tt-heading-title">Referanslar</h1>
                    </div> <!-- /.tt-heading-inner -->
                </div>

                <ul class="client-list">
                    @foreach (var item in references.OrderByDescending(x=> x.Id))
                    {
                        <li><a target="_blank" href="#" title="Client Logo"><img class="lazy" data-src="https://uploads.ikifikir.net/images/@item.slug" alt="client"></a></li>
                    }

                </ul>
                <!-- End client list -->

            </div> <!-- /.col -->
        </div> <!-- /.row -->

    </div> <!-- /.clients-inner -->
</section>

<section class="call-to-action-section cta-style-2 bg-dark text-white bg-pattern" style="background-image: url('https://uploads.ikifikir.net/site/pt-1.png');">


    <div class="cover cover-gradient-dark"></div>

    <div class="cta-inner tt-wrap">
        <!-- add/remove class "tt-wrap" to enable/disable element boxed layout (class "tt-boxed" is required in <body> tag!). Note: additionally you can use prepared helper class "max-width-*" to add custom width to "tt-wrap". Example: "max-width-1500" (class "tt-wrap" is still required!). More info about helper classes in file "helper.css" -->
        <div class="row">
            <div class="col-md-6">
                <div class="tt-heading tt-heading-xxlg">
                    <div class="tt-heading-inner">
                        <h1 class="tt-heading-title">Ne Yaparız?</h1>
                        <div class="tt-heading-subtitle">Çalışmalarımızı görmek istermisiniz?</div>
                        <!-- End zig-zag separator -->

                    </div> <!-- /.tt-heading-inner -->
                </div>
                <!-- End tt-heading -->

            </div> <!-- /.col -->

            <div class="col-md-6">

                <p>Yıllardan beri İstanbul’da pazarlama iletişimi alanında başarılı işlere imza atan iki ekip, aynı yolda birlikte yürümeye karar verdi. </p>

                <div class="margin-top-30">
                    <a href="@Url.Action("calismalar","anasayfa")" class="btn btn-white-bordered margin-top-5 margin-right-5">Çalışmalarımız</a>
                    <a href="@Url.Action("iletisim","anasayfa")" class="btn btn-primary margin-top-5">İletişime Geç</a>
                </div>

            </div> <!-- /.col -->
        </div> <!-- /.row -->
    </div> <!-- /.cta-inner -->
</section>

<script src="~/assets/vendor/jquery/jquery.min.js"></script>